#[Member]
BASE_DIR="{{ base_dir }}"
ETCD_NAME="{{ node_name }}"
ETCD_DATA_DIR="{{ etcd_data_dir }}"
ETCD_LISTEN_PEER_URLS="https://{{ hostip }}:2380"
ETCD_LISTEN_CLIENT_URLS="https://{{ hostip }}:2379"

#[Clustering]
ETCD_INITIAL_ADVERTISE_PEER_URLS="https://{{ hostip }}:2380"
ETCD_ADVERTISE_CLIENT_URLS="https://{{ hostip }}:2379"
# 提前规划好的节点
ETCD_INITIAL_CLUSTER="etcd01=https://172.29.202.134:2380,etcd02=https://172.29.202.154:2380,etcd03=https://172.29.202.174:2380"
ETCD_INITIAL_CLUSTER_TOKEN="{{ cluster_token }}"
