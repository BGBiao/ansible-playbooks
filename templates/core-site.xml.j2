<!-- Put site-specific property overrides in this file. -->

<configuration>
    <property>
        <name>fs.defaultFS</name>
        <value>hdfs://{{ cluster_name }}</value>
        <description>namenode address or clustername</description>
        <final>true</final>
    </property>

    <property>
        <name>ha.zookeeper.quorum</name>
        <!--value>10.10.31.209:2181,10.10.31.210:2181,10.10.31.211:2181</value-->
        <value>{{ zk_cluster }}</value>
    </property>

 <property>
    <name>ha.zookeeper.session-timeout.ms</name>
    <value>15000</value>
 </property>


    <!--配置hadoop元数据的存放目录-->
    <property>
        <name>hadoop.tmp.dir</name>
        <!--value>/data/hadoop/tmpha</value-->
        <value>{{ datanodedir }}{{ app }}/{{ tmpdir }}</value>
    </property>

    <!--读写文件时的的缓存大小，一般为page的倍数-->
    <property>
        <name>io.file.buffer.size</name>
        <value>131072</value>
    </property>

</configuration>

